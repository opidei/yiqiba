input{
  border: 1px solid #333333;
  width: 90%;
  margin: auto
}
textarea{
  border: 1px solid #333333;
  width: 90%;
  height: 200rpx;
  margin: auto
}

.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: auto;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
swiper-item{
  height: 500rpx;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}
swiper{
  text-align: center;
}

/*活动资料*/
.title{
  align-items: center;
  line-height: 2rem;
  display: flex;
  flex-direction:column; 
  height: 2rem;
  box-shadow: 0px 2px 5px #333333; 
}
.section{
  margin: 1rem 0;
  align-items: center;
}
.section_title{
  text-align: center;
}
.date{
  border: 1px solid #333333;
  width:90%;
  margin: auto
}
/*活动介绍*/
.day_title{
  width: 100%;
  height: 80rpx;
}
.day_title button{
  font-size:12px;
  width: 30%;
  height: 70rpx;
  float: left;
  margin: 10rpx 0 10rpx 10rpx;
}
.day_content{
  color: white;
  padding-top:30rpx; 
  width: 28%;
  height: 25%;
  border-radius: 5px;
  background-color: #F65959;
  margin: 20rpx 20rpx
}
.button{
  position: relative;
  top: 45%;
}
.day_content button{
  font-size: 7px;
  width: 47%;
  margin: 0 2rpx;
  height: 50rpx;
  display: inline-block;
}
.img{
  width: 300rpx;
  height: 300rpx;
  float: left;
  background-image: url("https://comeonkids.cn/uploads/2019-03-28/uVs9e20190328113318.jpg") 300rpx 300rpx;
}
/*活动设置*/